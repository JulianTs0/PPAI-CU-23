<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sismos-pu" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.mycompany.ppai_cu_23.models.AlcanceSismo</class>
        <class>com.mycompany.ppai_cu_23.models.CambioDeEstado</class>
        <class>com.mycompany.ppai_cu_23.models.ClasificacionSismo</class>
        <class>com.mycompany.ppai_cu_23.models.DetalleMuestraSismica</class>
        <class>com.mycompany.ppai_cu_23.models.Empleado</class>
        <class>com.mycompany.ppai_cu_23.models.EstacionSismologica</class>
        <class>com.mycompany.ppai_cu_23.models.EventoSismico</class>
        <class>com.mycompany.ppai_cu_23.models.MagnitudRichter</class>
        <class>com.mycompany.ppai_cu_23.models.MuestraSismica</class>
        <class>com.mycompany.ppai_cu_23.models.OrigenDeGeneracion</class>
        <class>com.mycompany.ppai_cu_23.models.SerieTemporal</class>
        <class>com.mycompany.ppai_cu_23.models.Sesion</class>
        <class>com.mycompany.ppai_cu_23.models.Sismografo</class>
        <class>com.mycompany.ppai_cu_23.models.TipoDeDato</class>
        <class>com.mycompany.ppai_cu_23.models.Usuario</class>
        <class>com.mycompany.ppai_cu_23.refactor.Estado</class>
        <class>com.mycompany.ppai_cu_23.refactor.Disponible</class>
        <class>com.mycompany.ppai_cu_23.refactor.Alerta</class>
        <class>com.mycompany.ppai_cu_23.refactor.Anulado</class>
        <class>com.mycompany.ppai_cu_23.refactor.AutoConfirmado</class>
        <class>com.mycompany.ppai_cu_23.refactor.AutoDetectado</class>
        <class>com.mycompany.ppai_cu_23.refactor.BloqueadoEnRevision</class>
        <class>com.mycompany.ppai_cu_23.refactor.Cerrado</class>
        <class>com.mycompany.ppai_cu_23.refactor.ConfirmadoPorPersonal</class>
        <class>com.mycompany.ppai_cu_23.refactor.Derivado</class>


        <properties>

            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:7435/sismos-db" />
            <property name="jakarta.persistence.jdbc.user" value="sismos" />
            <property name="jakarta.persistence.jdbc.password" value="sismos" />
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

            <!-- ===== ConfiguraciÃ³n de Hibernate ===== -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />

            <property name="hibernate.hbm2ddl.auto" value="update" />

        </properties>
    </persistence-unit>
</persistence>
